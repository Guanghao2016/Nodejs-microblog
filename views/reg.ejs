<form method="post" class="form-horizontal">
	<fieldset>
		<legend>用户注册</legend>

		<div class="control-group">
			<label for="username" class="control-label">用户名</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="username" >
				<p class="help-block">你的账户名，用于登录和注册</p>
			</div>
		</div>

		<div class="control-group">
			<label for="password" class="control-label">密码</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="password" name="password" >
			</div>
		</div>
	
		<div class="control-group">
			<label for="password-repeat" class="control-label">重复输入密码</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="password-repeat" name="password-repeat" >
			</div>
		</div>

		<div class="control-group">
			<label for="email" class="control-label">邮箱</label>
			<div class="controls">
				<input type="email" class="input-xlarge" id="email" name="email" >
			</div>
		</div>


		<div class="form-actions">
			<button class="btn btn-primary" type="submit" >注册</button>
		</div>

	</fieldset>
</form>